@page "/auth/login"
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Login</h2>
                </div>
                <div class="card-body">

                    <EditForm Model="Model" OnValidSubmit="LoginAsync">
                        <div class="form-group mb-3">
                            <label for="username">Username:</label>
                            <InputText @bind-Value="Model.Username" class="form-control" id="username" placeholder="Enter your username" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="password">Password:</label>
                            <InputText @bind-Value="Model.Password" class="form-control" id="password" type="password" placeholder="Enter your password" required />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>
